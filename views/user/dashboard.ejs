<%- include('../partials/header') %>

<div class="container my-5">
  <!-- Search Input -->
  <div class="d-flex justify-content-center mb-4">
    <input type="search" class="form-control search-input" placeholder="Search for loans" />
    <div>
  <!-- Apply For Loan Button -->
  <button type="button" class="btn btn-primary ms-2" onclick="window.location.href='/user/apply'">
    Apply For Loan
  </button>

  <!-- Logout Button -->
  <form action="/login" method="POST" style="display: inline;">
    <button type="submit" class="btn btn-danger ms-2">
      Logout
    </button>
  </form>
</div>

  </div>

  <% if (applications.length > 0) { %>
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead class="table-light">
          <tr>
            <th>Full Name</th>
            <th>Loan Amount</th>
            <th>Tenure (months)</th>
            <th>Employment Status</th>
            <th>Employment Address</th>
            <th>Loan Reason</th>
            <th>Status</th>
            <th>Applied On</th>
          </tr>
        </thead>
        <tbody>
          <% applications.forEach(app => { %>
            <tr>
              <td><%= app.fullName %></td>
              <td>â‚¹<%= app.loanAmount.toLocaleString() %></td>
              <td><%= app.tenure %></td>
              <td><%= app.employmentStatus %></td>
              <td><%= app.employmentAddress %></td>
              <td><%= app.loanReason %></td>
              <td>
                <% if (app.status === 'Approved') { %>
                  <span class="badge bg-success">Approved</span>
                <% } else if (app.status === 'Rejected') { %>
                  <span class="badge bg-danger">Rejected</span>
                <% } else { %>
                  <span class="badge bg-secondary">Pending</span>
                <% } %>
              </td>
              <td><%= new Date(app.createdAt).toLocaleDateString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <div class="alert alert-info" role="alert">
      You have not submitted any loan applications yet.
    </div>
  <% } %>
</div>

<style>
  /* Centered Search Input with Box Shadow */
.search-input {
  width: 50%;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  padding: 10px 15px;
  border-radius: 5px;
  border: 1px solid #ccc;
}

/* Table Styling */
.table thead th {
  font-family: 'Mulish', sans-serif;
  font-weight: 700;
  font-size: 14px;
  letter-spacing: 0.2px;
}

.table tbody td {
  font-family: 'Mulish', sans-serif;
  font-size: 14px;
  letter-spacing: 0.2px;
}

/* Badge Styling */
.badge {
  font-size: 0.9em;
  padding: 0.5em 0.75em;
}

</style>

<%- include('../partials/footer') %>
